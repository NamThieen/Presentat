{
    "id" : "app.nam.Presentat",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node20"
    ],
    "command" : "presentat",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--device=all",
        "--talk-name=org.freedesktop.portal.Filesystem",
        "--filesystem=xdg-documents:rw",
        "--filesystem=host:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "marp-cli",
            "buildsystem" : "simple",
            "build-commands" : [
                "export PATH=/usr/lib/sdk/node20/bin:$PATH && npm install -g @marp-team/marp-cli",
                "cp -a /app/bin/marp /app/bin/marp-cli"
            ],
            "sources" : []
        },
        {
            "name" : "presentat",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/nam/Projects"
                }
            ]
        }
    ]
}