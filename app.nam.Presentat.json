{
    "id": "app.nam.Presentat",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node20"
    ],
    "command": "presentat",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--device=all",
        "--talk-name=org.freedesktop.portal.Filesystem",
        "--filesystem=xdg-documents:rw",
        "--filesystem=host:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	{
    	"name": "marp-cli-source",
    	"buildsystem": "simple",
    	"sources": [
        	{
            	"type": "dir",
            	"path": "/home/nam/marp_install_temp/node_modules/@marp-team/marp-cli"
        	}
    	],
    	"build-commands": [
        	"mkdir -p /app/share/marp-cli/",
        	"cp -r . /app/share/marp-cli/",
        	"mkdir -p /app/bin",
        	"ln -s /app/share/marp-cli/marp-cli.js /app/bin/marp-cli"
    	]
	},
        {
            "name": "presentat",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "file:///home/nam/Projects"
                }
            ],
            "build-options": {
                "env": {
                    "PATH": "/usr/lib/sdk/node20/bin:$PATH"
                }
            }
        }
    ]
}